<% unless @user.kind_of? String %>
    <%= render partial: "user", locals: { user: @user } %>
    <div id="bio">
        <h4>Bio</h4>
        <p><%= @user.bio %></p>
    </div>
    <% posts = @user.recent_posts %>
     <% posts.each do |post| %>
        <div class="single_post">
            <%= render partial: "/posts/post", locals: { post: post, user: @user} %>
        </div>
    <% end %>
    <% if posts.empty? %>
        <p>There are no posts by <strong><%= @user.name %></strong> currently.</p>
    <% end %>
    <div class="buttons_holder">
        <% unless @user.posts.empty? %>
            <button id="show_all_posts"><%= link_to 'Show all posts', user_posts_path(user_id: @user.id) %></button>
        <% end %>
    </div> 
<% else %>
    <p><%= @user %>
<% end %>
