<div class="sign_up_form_wrapper">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'sign_up_form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'input_fields', placeholder: 'Email here..', autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'input_fields', placeholder: 'Username here..', autofocus: true, autocomplete: "name" %>
    </div>
  
    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_field :bio, class: 'input_fields', placeholder: 'Add your bio here..', autofocus: true, autocomplete: "bio" %>
    </div>
  
    <div class="field">
      <%= f.label :"photo(url)" %><br />
      <%= f.text_field :photo, class: 'input_fields', placeholder: 'Photo link here..', autofocus: true, autocomplete: "photo" %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'input_fields', placeholder: 'Password here..', autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: 'input_fields', placeholder: 'Confirm password here..', autocomplete: "new-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up", id: 'sign_up_btn' %>
    </div>
  <% end %>

  <p>Already have an account?</p>

<%= render "devise/shared/links" %>
</div>
